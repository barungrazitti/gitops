{
  "name": "ai-commit-generator",
  "version": "1.0.0",
  "description": "Automate your git workflow with AI-powered commit messages using Groq or Ollama",
  "main": "src/index.js",
  "bin": {
    "aicommit": "./bin/aicommit.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "VERBOSE_TESTS=1 jest --verbose",
    "build:prod": "./scripts/build.sh",
    "deploy": "./scripts/deploy.sh",
    "deploy:publish": "./scripts/deploy.sh --publish"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "automation",
    "cli",
    "conventional-commits",
    "ollama",
    "groq",
    "git-workflow",
    "developer-tools",
    "version-control",
    "llm",
    "nodejs",
    "javascript",
    "cli-tool",
    "automation-tools",
    "git-automation",
    "commit-message",
    "semantic-commits"
  ],
  "author": {
    "name": "Barun Tayenjam",
    "url": "https://github.com/baruntayenjam"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "conf": "^10.2.0",
    "fs-extra": "^11.1.1",
    "groq-sdk": "^0.33.0",
    "inquirer": "^8.2.6",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "ora": "^5.4.1",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
